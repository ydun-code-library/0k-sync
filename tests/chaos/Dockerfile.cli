# Dockerfile for sync-cli chaos testing
# Build context: ../.. (workspace root)
# Runs as root for tc netem support (NET_ADMIN capability)
# Entrypoint is sleep infinity â€” test harness controls via docker exec

# ---- Builder ----
FROM rust:1-slim-bookworm AS builder

RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    build-essential \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY . .
RUN cargo build -p zerok-sync-cli --release

# ---- Runtime ----
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    iproute2 \
    && rm -rf /var/lib/apt/lists/*

RUN mkdir -p /data

COPY --from=builder /app/target/release/sync-cli /usr/local/bin/sync-cli

# Run as root for tc netem support (chaos testing only)
VOLUME /data

ENV RUST_LOG=sync_cli=info

# Keep container alive for docker exec orchestration
CMD ["sleep", "infinity"]
