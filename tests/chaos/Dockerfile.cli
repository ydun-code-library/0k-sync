# Dockerfile for sync-cli chaos testing
# Build context: ../.. (workspace root)

# ---- Builder ----
FROM rust:1-slim-bookworm AS builder

RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    build-essential \
    pkg-config \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY . .
RUN cargo build -p zerok-sync-cli --release

# ---- Runtime ----
FROM debian:bookworm-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

RUN groupadd --system synccli && useradd --system --gid synccli --home-dir /data --shell /usr/sbin/nologin synccli
RUN mkdir -p /data && chown synccli:synccli /data

COPY --from=builder /app/target/release/sync-cli /usr/local/bin/sync-cli

USER synccli
VOLUME /data

ENV RUST_LOG=sync_cli=info

ENTRYPOINT ["sync-cli"]
CMD ["--help"]
