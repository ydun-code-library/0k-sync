{
  "name": "@0k-sync/native",
  "version": "0.1.0",
  "description": "Node.js/Bun native addon for 0k-Sync zero-knowledge sync",
  "main": "index.js",
  "types": "index.d.ts",
  "license": "MIT OR Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ydun-code-library/0k-sync"
  },
  "napi": {
    "name": "index",
    "triples": {
      "defaults": false,
      "additional": [
        "aarch64-apple-darwin",
        "x86_64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "aarch64-unknown-linux-gnu"
      ]
    }
  },
  "scripts": {
    "build": "napi build --release --strip --platform --js index.js --dts index.d.ts",
    "build:debug": "napi build --platform --js index.js --dts index.d.ts",
    "test": "node --test __tests__/client.test.mjs"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4"
  }
}
